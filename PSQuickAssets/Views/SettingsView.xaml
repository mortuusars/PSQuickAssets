<Window x:Class="PSQuickAssets.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:PSQuickAssets.WPF"
        xmlns:vm="clr-namespace:PSQuickAssets.ViewModels"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="500">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid>
        <wpf:HotkeyEditorControl x:Name="GlobalHotkeyEditor" Hotkey="{Binding GlobalHotkey}"/>
        <Button VerticalAlignment="Bottom" Height="30" Width="50" Content="Save" Command="{Binding SaveCommand}"/>
    </Grid>
</Window>
