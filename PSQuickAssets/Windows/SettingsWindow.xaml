<Window x:Class="PSQuickAssets.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PSQuickAssets.ViewModels" 
        xmlns:controls="clr-namespace:PSQuickAssets.Controls" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:mglobalhotkeys="clr-namespace:MGlobalHotkeys.WPF;assembly=MGlobalHotkeys.WPF"
        mc:Ignorable="d"
        Title="Settings" 
        MaxWidth="600" MinWidth="300"        
        MaxHeight="800" MinHeight="200"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        Background="{x:Null}" 
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        FontFamily="{StaticResource FontRegular}" 
        FontSize="14"
        d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
        Loaded="Window_Loaded"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="PSQuickAssets"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        >

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                        Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
    
    <Window.Resources>
        <Style x:Key="{x:Type ToolTip}" TargetType="ToolTip" BasedOn="{StaticResource DarkToolTip}"/>
    </Window.Resources>

    <Grid x:Name="MainContainer" Margin="30 30 30 44" Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- BACKGROUND -->
        <Border Grid.RowSpan="2" CornerRadius="8" BorderThickness="2" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Background="{StaticResource MainBackground}" 
                BorderBrush="{StaticResource MainBorder}" 
                Effect="{StaticResource WindowDropShadow}"/>

        <!-- HEADER -->
        <Border Grid.Row="0" Margin="2 2 2 0" x:Name="HeaderContainer" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                CornerRadius="6 6 0 0" Background="#343434" MouseDown="BG_MouseDown">

            <Grid>
                <!-- TITLE -->
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Source="../Resources/Images/settings.png"
                           Margin="6 0 0 0" Opacity=".4"/>
                    <TextBlock Text="{lex:Loc Settings}" Style="{StaticResource TextLight}"
                           Margin="6 -1 0 0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- HEADER BUTTONS -->
                <StackPanel Margin="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <!-- CLOSE BTN -->
                    <Image Source="/Resources/Images/close_24.png" 
                           Margin="2" 
                           Width="18" 
                           Height="18"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Right" 
                           Style="{StaticResource ImageButtons}" 
                           ToolTip="{lex:Loc Close}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="ApplicationCommands.Close"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" x:Name="MidContainer"
              Margin="10 4 10 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- SETTINGS -->
            <StackPanel Grid.Row="0">
                <Grid Margin="0 4"
                      Name="HotkeyColumn"
                      ToolTip="{lex:Loc Settings_ToggleWindowHotkey_Tooltip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{lex:Loc Settings_ToggleWindowHotkey}" 
                               Margin="0 0 20 0"
                               Style="{StaticResource TextLight}"
                           TextWrapping="Wrap"/>

                    <mglobalhotkeys:HotkeyPicker x:Name="HotkeyPicker"
                                                 Grid.Column="1" 
                                                 MinWidth="110"
                                                 Hotkey="{Binding ToggleMainWindowHotkey, UpdateSourceTrigger=LostFocus}"
                                                 ClearFocusOnCancel="True"
                                                 ClearFocusOnClear="True"
                                                 Foreground="{StaticResource TextColorBrush}"/>
                </Grid>

                <Rectangle Margin="0 4" Height="1.5" Fill="{StaticResource TextColorBrush}"
                           Opacity="0.5"/>

                <Grid Margin="0 4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{lex:Loc Settings_CheckForUpdates}" Style="{StaticResource TextLight}"
                           TextWrapping="Wrap"/>
                    <controls:ToggleSwitch x:Name="Toggle" Grid.Column="1"
                                      IsOn="{Binding CheckUpdates, Mode=TwoWay}" 
                                      HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>


                <Button x:Name="okButton"
                        Content="{lex:Loc OK}" 
                        Grid.Row="1" 
                        Margin="0 20 0 0"
                        MinWidth="70"
                        MaxWidth="180"
                        HorizontalAlignment="Right"
                        Foreground="{StaticResource TextColorBrush}"
                        ToolTip="{lex:Loc Settings_SaveAndClose}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding SaveCommand}"/>
                            <i:InvokeCommandAction Command="ApplicationCommands.Close"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
        </Grid>
    </Grid>
</Window>
