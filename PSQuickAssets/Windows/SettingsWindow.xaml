<Window
    x:Class="PSQuickAssets.Windows.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:PSQuickAssets.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mglobalhotkeys="clr-namespace:MGlobalHotkeys.WPF;assembly=MGlobalHotkeys.WPF"
    xmlns:vm="clr-namespace:PSQuickAssets.ViewModels"
    Title="Settings"
    MinWidth="300"
    MinHeight="200"
    MaxWidth="600"
    MaxHeight="800"
    d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="PSQuickAssets"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    AllowsTransparency="True"
    Background="{x:Null}"
    DataContext="{Binding SettingsViewModel, Source={StaticResource ViewModelLocator}}"
    FontFamily="{StaticResource FontRegular}"
    FontSize="14"
    Loaded="Window_Loaded"
    PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed" />
    </Window.CommandBindings>

    <Window.Resources>
        <Style
            x:Key="{x:Type ToolTip}"
            BasedOn="{StaticResource DarkToolTip}"
            TargetType="ToolTip" />
    </Window.Resources>

    <Grid
        x:Name="MainContainer"
        Margin="30,30,30,44"
        Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  BACKGROUND  -->
        <Border
            Grid.RowSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource MainBackground}"
            BorderBrush="{StaticResource MainBorder}"
            BorderThickness="2"
            CornerRadius="8"
            Effect="{StaticResource WindowDropShadow}" />

        <!--  HEADER  -->
        <Border
            x:Name="HeaderContainer"
            Grid.Row="0"
            Margin="2,2,2,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="#343434"
            CornerRadius="6 6 0 0"
            MouseDown="BG_MouseDown">

            <Grid>
                <!--  TITLE  -->
                <StackPanel Orientation="Horizontal">
                    <Image
                        Height="16"
                        Margin="6,0,0,0"
                        Opacity=".4"
                        Source="../Resources/Images/settings.png" />
                    <TextBlock
                        Margin="6,-1,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings}" />
                </StackPanel>

                <!--  HEADER BUTTONS  -->
                <StackPanel
                    Margin="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <!--  CLOSE BTN  -->
                    <Image
                        Width="18"
                        Height="18"
                        Margin="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Source="/Resources/Images/close_24.png"
                        Style="{StaticResource ImageButtons}"
                        ToolTip="{lex:Loc Close}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="ApplicationCommands.Close" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                </StackPanel>
            </Grid>
        </Border>

        <Grid
            x:Name="MidContainer"
            Grid.Row="1"
            Margin="10,4,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  SETTINGS  -->
            <StackPanel Grid.Row="0">
                <Grid
                    Name="Hotkey"
                    Margin="0,4"
                    ToolTip="{lex:Loc Settings_ToggleWindowHotkey_Tooltip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="0,0,20,0"
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings_ToggleWindowHotkey}"
                        TextWrapping="Wrap" />

                    <mglobalhotkeys:HotkeyPicker
                        x:Name="HotkeyPicker"
                        Grid.Column="1"
                        MinWidth="110"
                        ClearFocusOnCancel="True"
                        ClearFocusOnClear="True"
                        Foreground="{StaticResource TextColorBrush}"
                        Hotkey="{Binding ToggleMainWindowHotkey, UpdateSourceTrigger=LostFocus}" />
                </Grid>

                <Grid Margin="0,4" ToolTip="{lex:Loc Settings_AlwaysOnTop_Tooltip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings_AlwaysOnTop}"
                        TextWrapping="Wrap" />
                    <controls:ToggleSwitch
                        x:Name="AlwaysOnTopToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsOn="{Binding Config.AlwaysOnTop, Mode=TwoWay}" />
                </Grid>

                <Grid Margin="0,4" ToolTip="{lex:Loc Settings_HideIfClickedOutside_Tooltip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings_HideIfClickedOutside}"
                        TextWrapping="Wrap" />
                    <controls:ToggleSwitch
                        x:Name="HideWindowIfClickedOutsideToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsOn="{Binding Config.HideWindowIfClickedOutside, Mode=TwoWay}" />
                </Grid>

                <Grid Margin="0,4" ToolTip="{lex:Loc Settings_AddMaskIfDocumentHasSelection_Tooltip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings_AddMaskIfDocumentHasSelection}"
                        TextWrapping="Wrap" />
                    <controls:ToggleSwitch
                        x:Name="AddMaskToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsOn="{Binding Config.AddMaskIfDocumentHasSelection, Mode=TwoWay}" />
                </Grid>

                <Rectangle
                    Height="1.5"
                    Margin="0,4"
                    Fill="{StaticResource TextColorBrush}"
                    Opacity="0.5" />

                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Style="{StaticResource TextLight}"
                        Text="{lex:Loc Settings_CheckForUpdates}"
                        TextWrapping="Wrap" />
                    <controls:ToggleSwitch
                        x:Name="CheckUpdatesToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsOn="{Binding Config.CheckUpdates, Mode=TwoWay}" />
                </Grid>
            </StackPanel>


            <Button
                x:Name="okButton"
                Grid.Row="1"
                MinWidth="70"
                MaxWidth="180"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Content="{lex:Loc OK}"
                Foreground="{StaticResource TextColorBrush}"
                ToolTip="{lex:Loc Settings_SaveAndClose}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding SaveCommand}" />
                        <i:InvokeCommandAction Command="ApplicationCommands.Close" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
    </Grid>
</Window>
