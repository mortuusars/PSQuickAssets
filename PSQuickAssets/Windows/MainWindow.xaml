        <controls:ImageButton Grid.Row="1"
                              x:Name="CornerResize" 
                              Width="16" 
                              Margin="4"
                              VerticalAlignment="Bottom" 
                              HorizontalAlignment="Right"                  
                              MouseDown="CornerResize_MouseDown"
                              Source="../Resources/Images/corner_resize_24.png"
                              Cursor="SizeNWSE"/>
