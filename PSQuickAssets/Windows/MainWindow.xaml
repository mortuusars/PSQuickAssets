        <!--  CORNER RESIZE  -->
        <controls:ImageButton
            x:Name="CornerResize"
            Grid.Row="1"
            Width="16"
            Margin="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Cursor="SizeNWSE"
            MouseDown="CornerResize_MouseDown"
            Source="../Resources/Images/corner_resize_24.png" />
    </Grid>
</Window>
