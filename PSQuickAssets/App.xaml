<Application x:Class="PSQuickAssets.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:PSQuickAssets.WPF.Converters"
             Startup="Application_Startup"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/TaskBarIcon.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ScrollBar.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Texts.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Tooltip.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <conv:BoolToVisibilityHiddenConverter x:Key="BoolToVisibilityHidden"/>
            <conv:CountToMaxWidthConverter x:Key="CountToMaxWidth"/>
            <conv:FilenameToShortConverter x:Key="FilenameToShort"/>
            <conv:PathToFolderNameConverter x:Key="PathToFolderName"/>
            <conv:ThumbnailSizeToImageStretchConverter x:Key="ThumbnailSizeToImageStretchConverter"/>

            <DropShadowEffect x:Key="WindowDropShadow" BlurRadius="40" Direction="-90" ShadowDepth="8" Opacity="0.6"/>

            <SolidColorBrush Color="#ee292929" x:Key="MainBackground"/>
            <SolidColorBrush Color="#343434" x:Key="MainBorder"/>
            <SolidColorBrush Color="#9f9f9f" x:Key="TextColorBrush"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
