<Application
    x:Class="PSQuickAssets.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Fonts.xaml" />
                <ResourceDictionary Source="Resources/Icons.xaml" />
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Resources/Styles/Texts.xaml" />

                <ResourceDictionary Source="Resources/Templates.xaml" />
                <ResourceDictionary Source="Resources/Converters.xaml" />
                <ResourceDictionary Source="Resources/Services.xaml" />

                <ResourceDictionary Source="Resources/TaskBarIcon.xaml" />

                <ResourceDictionary Source="pack://application:,,,/MortuusUI;component/Themes/Generic.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <DropShadowEffect
                x:Key="WindowDropShadow"
                BlurRadius="30"
                Direction="-90"
                Opacity="0.45"
                ShadowDepth="8" />
            <DropShadowEffect
                x:Key="AssetShadow"
                BlurRadius="20"
                Direction="-90"
                Opacity="0.45"
                ShadowDepth="2" />

            <SineEase x:Key="EaseIn" EasingMode="EaseIn" />
            <SineEase x:Key="EaseOut" EasingMode="EaseOut" />
            <SineEase x:Key="EaseInOut" EasingMode="EaseInOut" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
