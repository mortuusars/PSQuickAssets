<Application x:Class="PSQuickAssets.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:PSQuickAssets.Infrastructure.Converters"
             Startup="Application_Startup"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/TaskBarIcon.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ScrollBar.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <conv:BoolToVisibilityHiddenConverter x:Key="BoolToVisibilityHidden"/>
            <conv:CountToMaxWidthConverter x:Key="CountToMaxWidth"/>
            <conv:FilenameToShortConverter x:Key="FilenameToShort"/>
            <conv:PathToFolderNameConverter x:Key="PathToFolderName"/>
            
            <SolidColorBrush Color="#8f8f8f" x:Key="TextColorBrush"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
