<UserControl x:Class="PSQuickAssets.WPF.HotkeyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSQuickAssets.WPF"
             mc:Ignorable="d" 
             x:Name="HotkeyControl"
             d:DesignHeight="200" 
             d:DesignWidth="300">
    
    <TextBox x:Name="HotkeyTextBox"
             HorizontalContentAlignment="Center" 
             VerticalContentAlignment="Center"
             IsReadOnly="True" IsReadOnlyCaretVisible="False"
             Background="Transparent"
             IsUndoEnabled="False"
             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
             d:Text="Ctrl + Alt + F8"
             Foreground="#8f8f8f"
             BorderThickness="0"
             Text="{Binding Hotkey, ElementName=HotkeyControl, Mode=OneWay, 
                                                    TargetNullValue=&lt; not set &gt;}">
        <TextBox.ContextMenu>
            <ContextMenu Visibility="Collapsed"/>
        </TextBox.ContextMenu>
    </TextBox>
</UserControl>
