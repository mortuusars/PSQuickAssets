<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundDarkColor">#282828</Color>
    <SolidColorBrush x:Key="BackgroundDark" Color="{StaticResource BackgroundDarkColor}" />

    <Color x:Key="SemiDarkColor">#343434</Color>
    <SolidColorBrush x:Key="SemiDark" Color="{StaticResource SemiDarkColor}" />

    <SolidColorBrush x:Key="MainBorder" Color="#343434" />
    <SolidColorBrush x:Key="BorderLighter" Color="#5a5a5a" />
    <SolidColorBrush x:Key="TextColorBrush" Color="#9f9f9f" />

    <Color x:Key="BackgroundLighterColor">#353535</Color>
    <SolidColorBrush x:Key="BackgroundLighter" Color="{StaticResource BackgroundLighterColor}" />

    <Color x:Key="ForegroundLighterColor">#7a7a7a</Color>
    <SolidColorBrush x:Key="ForegroundLighter" Color="{StaticResource ForegroundLighterColor}" />


</ResourceDictionary>