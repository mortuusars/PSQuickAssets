<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pureUI="clr-namespace:PureUI;assembly=PureUI">

    <Style x:Key="PSQAWindow" TargetType="{x:Type pureUI:PureWindow}" BasedOn="{StaticResource PureWindow}">
        <Setter Property="Background" Value="{DynamicResource Brushes.Background.0}"/>
        <Setter Property="TitleBackground" Value="{DynamicResource Brushes.Border.0}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brushes.Foreground.1}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brushes.Border.0}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GlowDepth" Value="1"/>
        <Setter Property="GlowColor" Value="{StaticResource Colors.Border.0}"/>
        <Setter Property="InactiveGlowColor" Value="{StaticResource Colors.Border.0}"/>
    </Style>
    
</ResourceDictionary>