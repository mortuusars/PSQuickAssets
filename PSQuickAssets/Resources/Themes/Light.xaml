<themes:ThemeResourceDictionary xmlns:themes="clr-namespace:PureUI.Themes;assembly=PureUI.Themes"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!--COLORS-->
    <Color x:Key="Colors.Background.0">#dfdfdf</Color>
    <Color x:Key="Colors.Background.1">#eaeaea</Color>
    <Color x:Key="Colors.Background.2">#efefef</Color>
    <Color x:Key="Colors.Background.3">#f8f8f8</Color>
    <Color x:Key="Colors.Background.4">#fff</Color>

    <Color x:Key="Colors.Border.0">#f8f8f8</Color>
    <Color x:Key="Colors.Border.1">#2f2f2f</Color>
    <Color x:Key="Colors.Border.2">#333</Color>

    <Color x:Key="Colors.Foreground.0">#222</Color>
    <Color x:Key="Colors.Foreground.1">#333</Color>
    <Color x:Key="Colors.Foreground.2">#444</Color>
    <Color x:Key="Colors.Foreground.3">#555</Color>
    <Color x:Key="Colors.Foreground.4">#666</Color>

    <Color x:Key="Colors.Accent.Background.0">#54A7E9</Color>

    <Color x:Key="Colors.Accent.Foreground.0">#222</Color>
    <Color x:Key="Colors.Accent.Foreground.0.Inverse">#fff</Color>

    <Color x:Key="Colors.Overlay.0">#20FFFFFF</Color>

    <Color x:Key="Colors.Utility.Error">#E95757</Color>
    <Color x:Key="Colors.Utility.Accent.0">#74B2F1</Color>
    <Color x:Key="Colors.Utility.Accent.1">#AAA1DC</Color>

    <!--BRUSHES-->
    <SolidColorBrush x:Key="Brushes.Background.0" Color="{StaticResource Colors.Background.0}"/>
    <SolidColorBrush x:Key="Brushes.Background.1" Color="{StaticResource Colors.Background.1}"/>
    <SolidColorBrush x:Key="Brushes.Background.2" Color="{StaticResource Colors.Background.2}"/>
    <SolidColorBrush x:Key="Brushes.Background.3" Color="{StaticResource Colors.Background.3}"/>
    <SolidColorBrush x:Key="Brushes.Background.4" Color="{StaticResource Colors.Background.4}"/>

    <SolidColorBrush x:Key="Brushes.Border.0" Color="{StaticResource Colors.Border.0}"/>
    <SolidColorBrush x:Key="Brushes.Border.1" Color="{StaticResource Colors.Border.1}"/>
    <SolidColorBrush x:Key="Brushes.Border.2" Color="{StaticResource Colors.Border.2}"/>

    <SolidColorBrush x:Key="Brushes.Foreground.0" Color="{StaticResource Colors.Foreground.0}"/>
    <SolidColorBrush x:Key="Brushes.Foreground.1" Color="{StaticResource Colors.Foreground.1}"/>
    <SolidColorBrush x:Key="Brushes.Foreground.2" Color="{StaticResource Colors.Foreground.2}"/>
    <SolidColorBrush x:Key="Brushes.Foreground.3" Color="{StaticResource Colors.Foreground.3}"/>
    <SolidColorBrush x:Key="Brushes.Foreground.4" Color="{StaticResource Colors.Foreground.4}"/>

    <SolidColorBrush x:Key="Brushes.Accent.Background.0" Color="{StaticResource Colors.Accent.Background.0}"/>

    <SolidColorBrush x:Key="Brushes.Accent.Foreground.0" Color="{StaticResource Colors.Accent.Foreground.0}"/>
    <SolidColorBrush x:Key="Brushes.Accent.Foreground.0.Inverse" Color="{StaticResource Colors.Accent.Foreground.0.Inverse}"/>

    <SolidColorBrush x:Key="Brushes.Overlay.0" Color="{StaticResource Colors.Overlay.0}"/>

    <SolidColorBrush x:Key="Brushes.Utility.Error" Color="{StaticResource Colors.Utility.Error}"/>
    <SolidColorBrush x:Key="Brushes.Utility.Accent.0" Color="{StaticResource Colors.Utility.Accent.0}"/>
    <SolidColorBrush x:Key="Brushes.Utility.Accent.1" Color="{StaticResource Colors.Utility.Accent.1}"/>
    
</themes:ThemeResourceDictionary>